{
  "manifest_version": 3,
  "name": "SideTimeTable",
  "version": "1.0",
  "description": "A side panel extension that shows your today's events.",
  "permissions": ["sidePanel", "identity", "storage"],
  "oauth2": {
    "client_id": "FILL_OUT_YOUR_CLIENT_ID",
    "scopes": ["https://www.googleapis.com/auth/calendar.readonly"]
  },
  "key": "FILL_OUT_YOUR_KEY",
  "action": {
    "default_popup": "side_panel.html"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
