{
  "name": "side-time-table",
  "version": "1.0.0",
  "description": "Chrome extension for displaying a timeline in the side panel",
  "main": "src/background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "jest": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^27.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^chrome-mock$": "<rootDir>/tests/mocks/chrome-mock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/lib/**"
    ]
  }
}
